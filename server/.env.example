# Server Configuration
PORT=4003
NODE_ENV=development
LOG_LEVEL=debug

# Frontend Configuration
FRONTEND_URL=http://localhost:3000
EXTERNAL_API_URL=API-URL

# Auth0 Configuration (Server-Side - Keep these SECRET)
AUTH0_DOMAIN=your-tenant.auth0.com
AUTH0_CLIENT_ID=your-auth0-client-id
AUTH0_CLIENT_SECRET=your-auth0-client-secret
AUTH0_AUDIENCE=your-api-identifier

# Session Configuration
SESSION_SECRET=your-super-secret-session-key-change-this-in-production
SESSION_COOKIE_DOMAIN=localhost
SESSION_SECURE=false

# Domain Restrictions
DOMAIN_RESTRICTIONS_ENABLED=false
ALLOWED_DOMAINS=
ALLOW_ALL_GMAIL=true
DOMAIN_BLOCK_MESSAGE=Access restricted to authorized company domains only.

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_PROJECT_ID=your_project_id_here

# LangChain Configuration
LANGCHAIN_VERBOSE=false
LANGCHAIN_TRACING_V2=false

# LangFuse Tracing
LANGFUSE_SECRET_KEY="your_secret_key_here"
LANGFUSE_PUBLIC_KEY="your_public_key_here"
LANGFUSE_BASE_URL="https://us.cloud.langfuse.com"
LANGFUSE_TRACING_ENVIRONMENT="development"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Basic Auth For Documentation
BASIC_AUTH_USER="your_username_here"
BASIC_AUTH_PASSWORD="your_password_here"