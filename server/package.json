{
    "name": "universal-knowledge-chatbot",
    "version": "1.0.0",
    "description": "Universal Knowledge Chatbot with web search capabilities",
    "type": "module",
    "main": "index.js",
    "scripts": {
        "start": "npx pm2 restart pm2-local.config.cjs",
        "start:debug": "npx pm2 restart pm2-debug.config.cjs",
        "stop": "npx pm2 delete knowledge-chatbot",
        "stop:debug": "npx pm2 delete knowledge-chatbot-debug",
        "restart": "npm run stop && npm run start",
        "logs": "npx pm2 logs knowledge-chatbot",
        "logs:debug": "npx pm2 logs knowledge-chatbot-debug",
        "test": "node --experimental-vm-modules node_modules/.bin/jest",
        "test:watch": "node --experimental-vm-modules node_modules/.bin/jest --watch",
        "format": "prettier --write ."
    },
    "keywords": [
        "langchain",
        "ai",
        "chatbot",
        "knowledge-base",
        "web-search",
        "universal-knowledge"
    ],
    "license": "MIT",
    "dependencies": {
        "@langchain/community": "^0.3.51",
        "@langchain/core": "^0.3.71",
        "@langchain/langgraph": "^0.4.5",
        "@langchain/openai": "^0.6.7",
        "@langchain/tavily": "^0.1.5",
        "axios": "^1.12.2",
        "cookie-parser": "^1.4.7",
        "cors": "^2.8.5",
        "dotenv": "^16.4.5",
        "express": "^5.1.0",
        "express-basic-auth": "^1.2.1",
        "express-rate-limit": "^8.0.1",
        "express-validator": "^7.2.1",
        "helmet": "^8.1.0",
        "http-errors": "^2.0.0",
        "jsonwebtoken": "^9.0.2",
        "pino": "^9.9.1",
        "pino-http": "^10.5.0",
        "uuid": "^11.1.0",
        "zod": "^3.25.76"
    },
    "devDependencies": {
        "jest": "^30.0.5",
        "pino-pretty": "^13.1.1",
        "pm2": "^6.0.9",
        "prettier": "3.6.2"
    }
}